<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true" >
    <shape>
      <solid
          android:color="#cc4543" />
      <stroke
          android:width="1dp"
          android:color="#cc4543" />
      <corners
          android:radius="6dp" />
    </shape>
  </item>
  <item>
    <shape>
      <gradient
          android:startColor="#ff5d55"
          android:endColor="#cc4543"
          android:angle="270" />
      <stroke
          android:width="1dp"
          android:color="#ff5d55" />
      <corners
          android:radius="6dp" />
    </shape>
  </item>
</selector>